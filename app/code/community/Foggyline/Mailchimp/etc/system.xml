<config>
    <sections>
        <newsletter>
            <groups>
                <foggyline_mailchimp translate="label" module="foggyline_mailchimp">
                    <label>Mailchimp</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment><![CDATA[Foggyline_Mailchimp extension developed by <a href="http://foggyline.net">branko.ajzele@foggyline.net</a>. Currently running version 1.0.0.0. Check out GitHub repository <a href="https://github.com/ajzele/Foggyline_Mailchimp">here</a> for possible new updates.]]></comment>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <apikey translate="label" >
                            <label>Api Key</label>
                            <frontend_type>Text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apikey>
                        <listid translate="label" >
                            <label>List ID</label>
                            <frontend_type>Text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </listid>
                        <doubleoptin>
                            <label>Use Double Opt-in</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </doubleoptin>
                        <msg>
                            <label>Confirmation Message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Message to show if "Use Double Opt-in => Yes". Use "%s" as a place-holder for email provided for subscription. Default message goes like "Subscription opt-in confirmation email has been sent to <i>%s</i>, please confirm it.".]]></comment>
                        </msg>
                    </fields>
                </foggyline_mailchimp>
            </groups>
        </newsletter>
    </sections>
</config>
